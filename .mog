import (
	src as up
)

v_path = [which v]

@dep(test2)
default:

@desc(run mog, this is kinda circular)
run:
	v run .

@desc(run mog with debug output)
run_trace:
	v -d trace_logs run .

@desc(build mog into an executable)
build:
	mkdir -p release && v -prod -o release/mog . && echo built

@desc(check if code can be compiled successfully)
check:
	v -check . && echo code is good

@desc(format mog code to v standards)
fmt:
	v fmt . -w

@desc(for testing)
test:
	echo {v_path}
	sleep 2
	echo {$1}
	echo Enter your name
	read name
	echo hello ${name}
	echo ${EDITOR}
	hogwash || echo no hogwash

test2:
	echo testing
	pwd
	cd ..
	pwd

@dep(up.test)
test3:
	echo {$#}
	echo {up.val}
	for arg in {$"@"}; do
		echo "- $arg"
	done
	pwd
